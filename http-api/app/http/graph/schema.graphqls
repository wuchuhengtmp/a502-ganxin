type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}
type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
  hello: User!
}

input NewTodo {
  text: String!
  userId: String!
}

type LoginRes {
  """ 授权token """    accessToken: String!
  """ 过期时长(秒) """  expired: Int!
}
type Mutation {
  createTodo(input: NewTodo!): Todo!
  """ 登录 """
  login( """ 手机号 """ phone: String, """ 密码 """ password: String ): LoginRes!
}